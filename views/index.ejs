<h2>Dashboard</h2><a class="waves-effect waves-light btn modal-trigger" href="#modal1">New Tour?</a>

<br>


<div class="row">
  <% tours.forEach(function(tour){ %>
      <div class="col s12 m6">
        <div class="card">
          <div class="card-image">
            <img src="<%= tour.imageUrl %>">
            <span>
            </span>


          </div>
          <div class="card-content">
            <p><%= tour.name %></p>
            <!-- <p><%= tour.description %></p> -->
          </div>
          <div class="card-action">
            <a href="/tours/<%= tour.id %>">Click to See Tour!</a>
            <a class="right delete" href="/tours/<%= tour.id %>">Delete!</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>











<div id="modal1" class="modal">
  <div class="modal-content">
    <h3>New Tour?</h3>
    <form action="/tours" method="post">
      <label>Name:
        <input type="text" name="name">
      </label>
      <label>Description:
        <input type="text" name="description">
      </label>
      <label>Upload a web-hosted Image:
        <input type="text" name="imageUrl">
      </label>
      <input type="submit" value="Add Tour">
    </form>
  </div>
</div>

